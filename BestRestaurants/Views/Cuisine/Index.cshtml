@{
  Layout = "_Layout";
}

<form action="/cuisines" method="post">
<label for="name">Add a cuisine </label>
<input type="text" name="name" id="name" /><br >
<button type="submit" class="btn btn-warning">Add</button>
</form>
<hr />
<h3>List of cuisines</h3>

<table class = "table table-hover">
<thead>
    <th class="col-md-4">Name</th>
    <th class="col-md-4">Edit</th>
    <th class="col-md-4">Delete</th>
</thead>
  <tbody>

  @foreach (var cuisine in Model)
  {
  <tr>
    <td class="col-md-4"><a href="/cuisines/@cuisine.Id">@cuisine.Name</a></td>
    <td class="col-md-4"><a href="/cuisines/@cuisine.Id/update" class="btn btn-info">Edit</a></td>
    <td class='col-md-4'>
      <form action="/cuisines/@cuisine.Id/delete" method="post">
        <button class='btn btn-danger'>Delete</button>
      </form>
    </td>
  </tr>
  }
  </tbody>
</table>
